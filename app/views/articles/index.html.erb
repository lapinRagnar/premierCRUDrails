<h1>Liste de tous les articles</h1>
<%= link_to 'Nouvelle article, new_article_path' %>
<table>
    <tr>
        <th>Titre: </th>
        <th>Contenu: </th>
        <th colspan = "2" ></th>
    </tr>

    <% @article.each do |article| %>
        <tr>
            <td><%= article.title%></td>
            <td><%= article.text%></td>
            <td><%= link_to 'show', article_path(article) %></td>
            <td><%= link_to "Editer" , edit_article_path(article)%></td>
            <td><%= link_to 'Effacer', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>

</table>